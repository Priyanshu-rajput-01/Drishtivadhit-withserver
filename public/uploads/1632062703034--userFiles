
#include<stdio.h>
void swapbyvalue(int, int);
void swapbyreference(int*, int*);
void main()
{
    int a,b;
    printf("Enter two numbers:\n");
    scanf("%d %d",&a,&b);
    printf("Numbers before swapping:\n");
    printf("a=%d, b=%d\n",a,b);
    swapbyvalue(a,b);
    printf("Numbers in the main after swapping by value:\n");
    printf("a=%d,b=%d",a,b);
    swapbyreference(&a,&b);
    printf("Numbers in the main after swapping by reference:\n");
    printf("a=%d, b=%d",a,b);

    }
    void swapbyvalue(int a,int b)
    {
        int t;
        t=a;
        a=b;
        b=t;
        printf("Numbers in function after swapping by value: a=%d, b=%d\n", a, b );
    }

    void swapbyreference(int*a, int*b)
    {
        int *t;
        *t=*a;
        *a=*b;
        *b=*t;
        printf(" \nNumbers in function after swapping by reference: a=%d, b=%d\n",*a,*b);
    }
